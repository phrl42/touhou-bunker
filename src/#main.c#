#include <stdbool.h>
#include <stdio.h>

#include <SDL2/SDL.h>
#include <SDL2/SDL_image.h>
#include <SDL2/SDL_mixer.h>


#include "init.h"

int main()
{
  SDL_Window *win;
  SDL_Surface *screen;
  SDL_Event ev;

  bool loopMenu = true;
  
  initWindow(win, screen);
  
  while(loopMenu)
    {
      while(SDL_PollEvent(&ev))
	{
	  switch(ev.type)
	    {  
	      case SDL_QUIT:
		loopMenu = false;
		break;
	    }
	}
    }
  
  
  SDL_DestroyWindow(win);
  SDL_Quit();
  
  return 0;
}
